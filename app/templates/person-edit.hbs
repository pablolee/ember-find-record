<h1>Person Edit</h1>

<button type="button" {{action "findRecord"}}>Call store.findRecord(reload: true)</button>
<button type="button" {{action "queryRecord"}}>Call store.queryRecord()</button>
<button type="button" {{action "query"}}>Call store.query()</button>
<LinkTo @route="person-display">Navigate to another route</LinkTo>
<br/>
<br/>

<div>
  <label>Name</label>
  <input
    type="text"
    value={{this.person.name}}
    {{on "input" (pick "target.value" (set this.person "name"))}}
  />
</div>

<div>
  <label>Boss</label>
  {{#each this.managers as |manager| }}
    <div {{on "click" (fn this.changeBoss manager)}}>[{{if (eq manager this.person.boss) "x" " "}}] {{manager.name}}</div>
  {{/each}}
</div>
